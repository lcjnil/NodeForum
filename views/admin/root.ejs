<%- include header %>

<div id="table">
<%	forumGroups.forEach(function(forumGroup){ %>
		<table class="table table-bordered">

		<thead>
			<th><%= forumGroup.area%></th>
			<tr>
				<th>Forum No.</th>
				<th>Forum Name</th>
				<th>Description</th>
				<th>Operation</th>
			</tr>
		</thead>
		
		<tbody>
		<%	forumGroup.forumNames.forEach(function(forumName, index) { %>
				<tr>
					<td><%=	forumName.forumId %></td>
					<td><%=	forumName.name %></td>
					<td><%=	forumName.description %></td>
					<td> 
						<button class="btn btn-sm btn-default" type="button">
							<span class="glyphicon glyphicon-phone"></span> Delete
						</button>
					</td>
				<tr>
			<%	if (index == forumGroup.forumNames.length-1) { %>
					<form action="">
						<td><input type="text" name="forumId"></td>
						<td><input type="text" name="name"></td>
						<td><input type="text" name="description"></td>
						<td>
							<button type="submit" class="btn btn-default" >
								Submit
							</button>
						</td>
					</form>
			<%	} %>
		<%	}); %>	
		</tbody>
		
		</table>
<%	}); %>
</div>


<%- include footer %>