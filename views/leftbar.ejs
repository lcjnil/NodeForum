<% if (!user) { %>
<div> <!-- LOGIN or LOGO panel -->
	<div class="panel panel-default"> 
		<div class="panel-heading">
			<b>TESTING!!!!</b>
		</div>
		<div class="panel-body">
			<button type="button" class="btn btn-default center-block">button</button>
		</div>
	</div>
</div>
<% } else { %>
<div id="leftbar"> <!-- USER INFORMATION BLOCK -->
	<div class="panel panel-default"> 
		<div class="panel-body">
			<div class="row userFo">
				<div class="col-sm-4">
					<p><%= user.follower.length %></p>
					<p>Follower</p>
				</div>
				<div class="col-sm-4">
					<p><%= user.following.length %></p>
					<p>Following</p>
				</div>
				<div class="col-sm-4">
					<p><%= user.favoriteThread.length %></p>
					<p>Favoite</p>
				</div>
			</div>
		</div> <!-- END PANEL BODY -->
		<div class="panel-footer">
			<p>Unread: 0</p>
		</div> <!-- END PANEL FOOTER -->
	</div> <!-- END PANEL -->
</div>
<% } %>