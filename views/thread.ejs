<!-- this is for Thread!-->
<%- include header %>
<div class="col-md-9 col-lg-9">
	<div class="panel panel-default">
		<div class="panel-heading">
			<%= thread.title%>
		</div>
		<div class="panel-body">
			<form method="post" action="">
				<button type="submit" class="btn btn-primary" name="edit" value="1">
					编辑
				</button>
			</form>
			<%- thread.content %>
		</div>
	</div>
	<div class="panel panel-default">
		<div class="panel-heading">
			回复
		</div>
		<div class="panel-body">
		<%	response.forEach(function(oneResponse){ %>
			Author:<%=	oneResponse.author.userId %> <br>
			Res:<%-	oneResponse.content %>
		<%	}); %>
		</div>
	</div>
	<div class="panel panel-default	">
		<div class="panel-heading">发表回复！</div>
		<div class="panel-body">
			<form class="form-horizontal" role="form" method ="post" action="">
				<input type="hidden" name="response" value="1">
				<div class="form-group">
					<label class="col-sm-2 control-label">Response</label>
					<div class="col-sm-10">
						<Textarea class="form-control" rows="5" placeholder="Input your response" name="resContent"></Textarea>
					</div>
				</div>
				<div class="form-group">
					<div class="col-sm-offset-2 col-sm-10">
						<button type="submit" class="btn btn-default">Submit</button>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>

<div class="col-md-3 col-lg-3">
	<%- include leftbar.ejs %>
</div>
<%- include footer %>